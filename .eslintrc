{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-console": 1,
    "curly": 1,
    "eqeqeq": 1,
    "no-alert": 2,
    "no-eval": 2,
    "no-extra-semi": 1,
    "no-multi-spaces": 1,
    "no-unused-vars": 1,
    "no-unreachable": 1,
    "array-bracket-spacing": [1, "never"],
    "block-spacing": [1, "always"],
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "camelcase": [1, {"properties": "always"}],
    "comma-spacing": [1, {"before": false, "after": true}],
    "comma-style": [1, "last"],
    "eol-last": 1,
    "indent": [1, 2, {"SwitchCase": 1}],
    "keyword-spacing": 1,
    "semi": 2,
    "quotes": [1, "single"]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "angular": false,
    "EventBus": false
  }
}
